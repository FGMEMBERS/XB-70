<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Tachometer -->

<PropertyList>

  <path>nozzle.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>needle</object-name>
	<object-name>face</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.030 </red>
      <green> 0.015 </green>
      <blue>  0.005 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>controls/engines/engine[0]/throttle</property>
  <factor>-270</factor>
  <center>
   <x-m>-0.01</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 
 
</PropertyList>

