        <animation include="Instrument-Light4.xml">
                <object-name>Aiguille</object-name>
                <object-name>Index-n-xx</object-name>
                <object-name>Index-x-nx</object-name>
                <object-name>Index-x-xn</object-name>
                <object-name>Index</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Cadran</object-name>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Aiguille</object-name>
                <property>engines/engine[0]/epr</property>
                <interpolation>
                        <entry>
                                <ind>1</ind>
                                <dep>0</dep>
                        </entry>
                        <entry>
                                <ind>1.066</ind>  <!--1.1-->
                                <dep>50</dep>
                        </entry>
                        <entry>
                                <ind>1.132</ind>  <!--1.2-->
                                <dep>90</dep>
                        </entry>
                        <entry>
                                <ind>1.33</ind>   <!--1.5-->
                                <dep>120</dep>
                        </entry>
                        <entry>
                                <ind>1.66</ind>  <!-- 2-->
                                <dep>200</dep>
                        </entry>
                        <entry>
                                <ind>1.99</ind>  <!-- 2.5-->
                                <dep>280</dep>
                        </entry>
                        <entry>
                                <ind>2.32</ind>  <!-- 3.0-->
                                <dep>360</dep>
                        </entry>
                </interpolation>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>
		
		<animation>
    <type>material</type>
	<object-name>Cadran</object-name>
    <object-name>Index-n-xx</object-name>
    <object-name>Index-x-nx</object-name>
    <object-name>Index-x-xn</object-name>
    <object-name>Index</object-name>    
    <emission>
      <red>   0.030 </red>
      <green> 0.015 </green>
      <blue>  0.005 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

